let currentQuestion = 0;
let score = 0;

const questionContainer = document.getElementById('question-container');
const progressBar = document.getElementById('progress');
const resultDiv = document.getElementById('result');
const questionSound = document.getElementById('question-sound');
const cheerSound = document.getElementById('cheer-sound');
const bgMusic = document.getElementById('bg-music');

function showQuestion() {
    if (currentQuestion < questions.length) {
        const q = questions[currentQuestion];
        questionContainer.innerHTML = `
            <div class="question"><span class="icon">${q.icon}</span>${q.q}</div>
            <div class="answers">
                ${q.a.map((answer, i) => `<button onclick="nextQuestion(${i})">${answer}</button>`).join('')}
            </div>
        `;
        progressBar.style.width = ((currentQuestion / questions.length) * 100) + '%';
        questionSound.play(); // Play sound when question appears
    } else {
        showResult();
    }
}

function nextQuestion(choice) {
    score += choice; // simple scoring
    currentQuestion++;
    showQuestion();
}

function showResult() {
    progressBar.style.width = '100%';
    const resultIndex = score % results.length;
    const r = results[resultIndex];
    questionContainer.style.display = 'none';
    resultDiv.style.display = 'block';
    resultDiv.innerHTML = `<h2>${r.title}</h2><p>${r.desc}</p>`;
    resultDiv.style.animation = 'fadeIn 1s forwards';
    launchConfetti();
    cheerSound.play();
}

function launchConfetti() {
    const canvas = document.getElementById('confetti');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    const pieces = [];
    for (let i = 0; i < 150; i++) {
        pieces.push({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height - canvas.height,
            size: Math.random() * 10 + 5,
            color: `hsl(${Math.random() * 360}, 100%, 50%)`,
            speed: Math.random() * 3 + 2
        });
    }
    let startTime = Date.now();
    function draw() {
        const elapsed = Date.now() - startTime;
        if (elapsed > 5000) {
            ctx.clearRect(0, 0, canvas.width, canvas.height); // Clear confetti after 5s
            return;
        }
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        pieces.forEach(p => {
            ctx.fillStyle = p.color;
            ctx.beginPath();
            ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
            ctx.fill();
            p.y += p.speed;
            if (p.y > canvas.height) p.y = -10;
        });
        requestAnimationFrame(draw);
    }
    draw();
}

function toggleMusic() {
    if (bgMusic.paused) {
        bgMusic.volume = 0.2; // subtle volume
        bgMusic.play();
    } else {
        bgMusic.pause();
    }
}

showQuestion();
</script>
